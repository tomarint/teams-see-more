{
<% if (browser === 'firefox') { -%>
  "manifest_version": 2,
<% } else { -%>
  "manifest_version": 3,
<% } -%>
  "name": "__MSG_extName__",
  "version": "<%= version %>",
<% if (browser !== 'firefox') { -%>
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "__MSG_extName__"
  },
<% } -%>
  "default_locale": "en",
  "description": "__MSG_extDescription__",
  "icons": {
    "16": "images/icon16.png",
    "24": "images/icon24.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
<% if (browser === 'firefox') { -%>
  "browser_specific_settings": {
    "gecko": {
      "id": "{b26d45fa-ec75-4703-a539-2318aaa7a7fa}"
    }
  },
<% } -%>  
  "content_scripts": [
    {
      "matches": [
        "https://teams.microsoft.com/*"
      ],
      "js": [
        "content_event.js"
      ]
    }
  ],
<% if (browser === 'firefox') { -%>
  "background": {
    "scripts": [
      "background.js"
    ]
  },
<% } else { -%>
  "background": {
    "service_worker": "background.js"
  },
<% } -%>
<% if (browser !== 'firefox') { -%>
  "host_permissions": [
    "https://teams.microsoft.com/*"
  ],
<% } -%>
  "permissions": [
    "tabs",
    "contextMenus"
  ]
}